<div id="submitInsult" class="panel panel-default panel-form">
    <div class="panel-heading">
        <h3 class="panel-title">Submit an Insult</h3>
    </div>
    <div class="panel-body">
        <form method="post" action="<%= href('/') %>">
            <div class="form-group">
                <label for="author">Author</label>
                <input id="author" class="form-control" type="text" autofocus />
            </div>
            <div class="form-group">
                <label for="insult">Insult</label>
                <textarea id="insult" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>