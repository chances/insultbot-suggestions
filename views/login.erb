<% if defined? @success %>
<% unless @success %>
<div id="error" class="container fixed">
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="error">&times;</button>
        <strong>Uh oh!</strong> Incorrect username or password.
    </div>
</div>
<% end end %>
<div id="loginPanel" class="panel panel-default panel-form">
    <div class="panel-heading">
        <h3 class="panel-title">Sign in</h3>
    </div>
    <div class="panel-body">
        <form id="login" method="post" action="<%= params.has_key?('continue') ? href('/login', {'continue' => params[:continue]}) : href('/login') %>">
            <div class="form-group">
                <label class="control-label" for="username">Username or email</label>
                <input id="username" class="form-control" name="username" type="text" maxlength="255" autofocus />
            </div>
            <div class="form-group">
                <label class="control-label" for="password">Password</label>
                <input id="password" class="form-control" name="password" type="password" maxlength="75" />
            </div>
            <button type="submit" class="btn btn-default">Sign in</button>
            <p class="text-danger right-aligned pull-right">You must specify <span id="errorMsg"></span>.</p>
        </form>
    </div>
</div>
