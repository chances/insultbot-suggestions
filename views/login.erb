<% if defined? @success %>
<% unless @success %>
<div id="error" class="container fixed">
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="error">&times;</button>
        <strong>Uh oh!</strong> Incorrect username or password.
    </div>
</div>
<% end end %>
<div id="login" class="panel panel-default panel-form">
    <div class="panel-heading">
        <h3 class="panel-title">Sign in</h3>
    </div>
    <div class="panel-body">
        <form method="post" action="<%= href('/login') %>">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" class="form-control" type="text" autofocus />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" class="form-control" type="password" />
            </div>
            <button type="submit" class="btn btn-default">Sign in</button>
            <p class="text-danger right-aligned"></p>
        </form>
    </div>
</div>